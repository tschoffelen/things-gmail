{
  "name": "Add to Things for Gmail",
  "short_name": "Things",
  "version": "1.0.0",
  "description":
    "Adds a button to Gmail threads to add them to Things, including a link to the message.",
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": { "128": "icon.png" },
  "web_accessible_resources": ["content.js", "main.js", "vendor.js"],
  "manifest_version": 2
}
